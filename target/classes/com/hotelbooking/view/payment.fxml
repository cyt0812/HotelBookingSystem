<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotelbooking.controller.PaymentController"
            prefHeight="800" prefWidth="900"
            style="-fx-background-color: #f5f5f5;">
    
    
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20"
              style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            
 
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="15">
                <Button text="â† Back" 
                        onAction="#backToPrevious"
                        style="-fx-background-color: transparent; -fx-text-fill: #8B4513; -fx-font-size: 14px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                
                <Label text="ðŸ¨ Hotel Booking System" 
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a; -fx-cursor: hand"
                       onMouseClicked="#backToHome"/>
            </HBox>

            <fx:include source="/com/hotelbooking/view/components/TopNavigationBar.fxml"/>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <HBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 30;">
                
                <!-- Left: Payment Form -->
                <VBox spacing="25" style="-fx-pref-width: 500px;">
                    
                    <Label text="Complete Your Payment" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    
                    <!-- Card Info -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-border-radius: 10; -fx-background-radius: 10;">
                        
                        <Label text="Card Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        
                        <VBox spacing="5">
                            <Label text="Card Number"/>
                            <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456"
                                       style="-fx-pref-height: 40px;"/>
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Cardholder Name"/>
                            <TextField fx:id="cardNameField" promptText="John Doe"
                                       style="-fx-pref-height: 40px;"/>
                        </VBox>
                        
                        <HBox spacing="15">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Expiry Date"/>
                                <TextField fx:id="expiryField" promptText="MM/YY"
                                           style="-fx-pref-height: 40px;"/>
                            </VBox>
                            
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="CVV"/>
                                <TextField fx:id="cvvField" promptText="123"
                                           style="-fx-pref-height: 40px;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                    <!-- Billing Address -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-border-radius: 10; -fx-background-radius: 10;">
                        
                        <Label text="Billing Address" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        
                        <VBox spacing="5">
                            <Label text="Country"/>
                            <ComboBox fx:id="countryCombo" promptText="Select country"
                                      style="-fx-pref-width: 450px; -fx-pref-height: 40px;"/>
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Postal Code"/>
                            <TextField fx:id="postalCodeField" promptText="Enter postal code"
                                       style="-fx-pref-height: 40px;"/>
                        </VBox>
                    </VBox>
                    
                    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
                    
                    <Button text="Complete Payment" onAction="#handlePayment"
                            style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 50px;"/>
                    
                </VBox>
                
                <!-- Right: Order Summary -->
                <VBox spacing="20" style="-fx-pref-width: 350px;">
                    
                    <Label text="Order Summary" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                    
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-border-radius: 10; -fx-background-radius: 10;">
                        
                        <VBox spacing="5">
                            <Label fx:id="lblHotelName" text="Grand Luxury Hotel"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Label fx:id="lblRoomType" text="Deluxe Room"
                                   style="-fx-text-fill: #666;"/>
                        </VBox>
                        
                        <Separator/>
                        
                        <VBox spacing="8">
                            <HBox spacing="10">
                                <Label text="Check-in:" style="-fx-pref-width: 80px;"/>
                                <Label fx:id="lblCheckIn" text="Dec 15, 2024" style="-fx-font-weight: bold;"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Check-out:" style="-fx-pref-width: 80px;"/>
                                <Label fx:id="lblCheckOut" text="Dec 18, 2024" style="-fx-font-weight: bold;"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Nights:" style="-fx-pref-width: 80px;"/>
                                <Label fx:id="lblNights" text="3 nights" style="-fx-font-weight: bold;"/>
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Guests:" style="-fx-pref-width: 80px;"/>
                                <Label fx:id="lblGuests" text="2 adults" style="-fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                        
                        <Separator/>
                        
                        <VBox spacing="8">
                            <HBox>
                                <Label text="Room price:"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="lblRoomPrice" text="450.00"/>
                            </HBox>
                            <HBox>
                                <Label text="Service fee:"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="lblServiceFee" text="25.00"/>
                            </HBox>
                            <HBox>
                                <Label text="Tax:"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="lblTax" text="47.50"/>
                            </HBox>
                        </VBox>
                        
                        <Separator/>
                        
                        <HBox>
                            <Label text="Total:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblTotal" text="522.50"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #8B4513;"/>
                        </HBox>
                        
                    </VBox>
                    
                </VBox>
                
            </HBox>
        </ScrollPane>
    </center>
    
</BorderPane>