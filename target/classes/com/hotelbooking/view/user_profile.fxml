<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotelbooking.controller.UserProfileController"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- È°∂ÈÉ®ÂØºËà™Ê†è -->
    <top>
        <HBox alignment="CENTER_RIGHT" 
              spacing="20"
              style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text="üè® Hotel Booking System" 
                       onMouseClicked="#backToHome"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a; -fx-cursor: hand;"/>
            </HBox>
            
            <Button text="My Trips" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14px;"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #8B4513; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <!-- ‰∏ªË¶ÅÂÜÖÂÆπ -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            
            <!-- Ê†áÈ¢ò -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="My Profile" 
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;"/>
                <Label text="Manage your account information" 
                       style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
            </VBox>
            
            <!-- ‰∏™‰∫∫‰ø°ÊÅØÂç°Áâá -->
            <HBox spacing="40" alignment="TOP_CENTER">
                
                    
                <!-- ‰ºöÂëò‰ø°ÊÅØ -->
                <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">
                        <VBox spacing="5">
                            <Label text="Member Since" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-font-weight: bold;"/>
                            <Label fx:id="memberSinceLabel" 
                                   text="Loading..." 
                                   style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Account Role" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-font-weight: bold;"/>
                            <Label fx:id="roleLabel" 
                                   text="Loading..." 
                                   style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-weight: bold;"/>
                        </VBox>
                    
                </VBox>
                
                <!-- Âè≥‰æßÔºö‰∏™‰∫∫‰ø°ÊÅØÂç°Áâá -->
                <VBox spacing="25" alignment="TOP_LEFT"
                      style="-fx-background-color: white; 
                             -fx-padding: 40; 
                             -fx-border-radius: 10; 
                             -fx-background-radius: 10; 
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);
                             -fx-pref-width: 450px;">
                    
                    <!-- Username -->
                    <VBox spacing="8">
                        <Label text="Username" 
                               style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-font-weight: bold;"/>
                        <Label fx:id="usernameLabel" 
                               text="Loading..." 
                               style="-fx-font-size: 16px; -fx-text-fill: #1a1a1a; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Email -->
                    <VBox spacing="8">
                        <Label text="Email Address" 
                               style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-font-weight: bold;"/>
                        <Label fx:id="emailLabel" 
                               text="Loading..." 
                               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                    </VBox>
                    
                    <!-- Full Name -->
                    <VBox spacing="8">
                        <Label text="Full Name" 
                               style="-fx-font-size: 12px; -fx-text-fill: #999; -fx-font-weight: bold;"/>
                        <Label fx:id="fullNameLabel" 
                               text="Not set" 
                               style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                    </VBox>
                    
                    <!-- ÂàÜÈöîÁ∫ø -->
                    <Separator style="-fx-padding: 10 0;"/>
                    
                    <!-- ÊåâÈíÆÁªÑ -->
                    <HBox spacing="15">
                        <Button text="Edit Profile" 
                                onAction="#handleEditProfile"
                                style="-fx-background-color: #8B4513; 
                                       -fx-text-fill: white; 
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-pref-width: 180px;
                                       -fx-pref-height: 45px;
                                       -fx-border-radius: 5;
                                       -fx-background-radius: 5;
                                       -fx-cursor: hand;"/>
                        
                        <Button text="Change Password" 
                                onAction="#handleChangePassword"
                                style="-fx-background-color: #6c757d; 
                                       -fx-text-fill: white; 
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-pref-width: 180px;
                                       -fx-pref-height: 45px;
                                       -fx-border-radius: 5;
                                       -fx-background-radius: 5;
                                       -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
